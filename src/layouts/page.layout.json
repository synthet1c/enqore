{
  "name": "page",
  "description": "Standard page layout",
  "template": "./page.vue",
  "extends": false,
  "fields": {
    "theme": "light"
  },
  "meta": {
    "title": "${page.title}",
    "description": "${page.description}"
  },
  "components": [
    {
      "name": "body",
      "area": "body",
      "components": [
        {
          "name": "header",
          "components": [
            {
              "name": "menu",
              "type": "widget",
              "data": "modules/global/queries/menu.ts"
            }
          ]
        },
        {
          "name": "main",
          "type": "main",
          "components": [
            {
              "name": "content",
              "type": "block",
              "block": "content",
              "fields": {
                "container": "${fields.container}"
              }
            }
          ]
        },
        {
          "name": "footer"
        }
      ]
    }
  ]
}