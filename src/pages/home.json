{
  "name": "home",
  "template": "home.html",
  "slug": "/home",
  "extends": {
    "name": "page",
    "merge": {
      "meta": "overwrite",
      "components": "mergeDeep"
    }
  },
  "route": {
    "url": "/shop/{productId}",
    "get": {
      "variant": "string"
    },
    "params": {
      "id": "productId"
    },
    "where": {
      "// conditionally apply the schema to the data": "",
      "product.category": "radios",
      "user.access": {
        "_gte": "admin"
      }
    }
  },
  "data": "./home.graphql",
  "fields": {
    "theme": "dark"
  },
  "meta": {
    "title": "Home",
    "description": "the home page"
  },
  "components": [
    {
      "name": "section",
      "components": [
        {
          "name": "paragraph",
          "fields": {
            "heading": "Home",
            "headingSize": "medium",
            "description": "This is the home page",
            "theme": "primary",
            "fontSize": "small"
          }
        }
      ]
    },
    {
      "name": "section",
      "fields": {
        "heading": "latest blogs",
        "columns": 3
      },
      "components": [
        {
          "name": "card",
          "fields": {
            "heading": "Home",
            "headingSize": "medium",
            "description": "This is the home page",
            "theme": "secondary",
            "fontSize": "small",
            "span": 1
          }
        },
        {
          "name": "card",
          "fields": {
            "heading": "Home",
            "headingSize": "medium",
            "description": "This is the home page",
            "image": {
              "desktop": "/path/to/file/cart.desktop.jpg",
              "tablet": "/path/to/file/cart.tablet.jpg",
              "mobile": "/path/to/file/cart.mobile.jpg"
            },
            "theme": "secondary",
            "fontSize": "small",
            "span": 2
          }
        }
      ]
    }
  ]
}